<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@id/keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/keyboard"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="返回" />
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/back_button" />
    <Button
        android:id="@+id/backspace_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回退"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/save_button" />
    <Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重来"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/backspace_button" />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/keyboard"
        android:max="100"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:visibility="visible" />
    <TextView
        android:id="@+id/fuzzyInputTestCharShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f25b63"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/back_button"
        android:text=""
        />
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_above="@id/progress_bar"
        android:layout_below="@id/fuzzyInputTestCharShow" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/seekBar"
        android:layout_above="@id/keyboard"
        android:layout_marginBottom="40dp"
        android:layout_alignParentStart="true"
        android:max="100"
        android:secondaryProgress="0"
        android:progress="0"
        android:indeterminate="false" />

    <TextView
        android:id="@id/seekBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seekBarText"
        android:textSize="22sp"
        android:layout_marginBottom="40dp"
        android:layout_above="@id/seekBar"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>